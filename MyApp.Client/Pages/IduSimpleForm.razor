    public static class IntConverter
    {
        public static Converter<int?> NullableIntConverter = new Converter<int?>
            {
                SetFunc = value => $"{value:#,###}",
                GetFunc = text =>
                {
                    if (String.IsNullOrWhiteSpace(text)) return null;
                    return int.TryParse(text.Replace(",", "").TrimEnd(), out var result)
                        ? result
                        : null;
                },
            };

