    private string IduSelectMultiMultiSelectionTextFunc(List<string> selectedValues)
    {
        var texts = (from T0 in selectedValues
                     join T1 in selectSources on T0 equals T1.Value
                     orderby T0 ascending
                     select T1.Text
                     ).ToList()
     ;

